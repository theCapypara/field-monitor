[Desktop Entry]
Name=Field Monitor
GenericName=Remote Desktop Viewer
Comment=Access virtual machines and other external screens
Exec=@APP_ID@ %U
Icon=@APP_ID@
Terminal=false
Type=Application
Categories=GTK;Network;
StartupNotify=true
# Translators: The keywords from the desktop file.
Keywords=proxmox;vnc;spice;rdp;kvm;qemu;
Actions=new-window;
MimeType=x-scheme-handler/rdp;x-scheme-handler/spice;x-scheme-handler/vnc;x-scheme-handler/spice+unix;x-scheme-handler/spice+tls;application/x-virt-viewer;application/x-rdp;

[Desktop Action new-window]
Name=New Window
Exec=@APP_ID@ --new-window
